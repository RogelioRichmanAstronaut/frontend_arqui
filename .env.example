# Environment Configuration for Turismo Frontend
# Copy this file to .env.local for local development

# ==============================================
# API Configuration
# ==============================================

# Main Tourism API (NestJS Backend)
NEXT_PUBLIC_API_URL=http://localhost:3001/v1
BACKEND_URL=http://localhost:3001/v1

# ==============================================
# External Services Configuration
# ==============================================

# Airline Service (Production)
NEXT_PUBLIC_AIRLINE_API_URL=http://10.43.103.34:8080/v1

# Hotel Service (Production) 
NEXT_PUBLIC_HOTEL_API_URL=http://10.43.103.234:8080/manejadordb

# Bank Service (Local Development)
NEXT_PUBLIC_BANK_API_URL=http://localhost:3000

# ==============================================
# Application Configuration
# ==============================================

# Environment
NODE_ENV=development

# Application Name
NEXT_PUBLIC_APP_NAME=Turismo App

# Application Version
NEXT_PUBLIC_APP_VERSION=1.0.0

# ==============================================
# Payment Configuration
# ==============================================

# Default currency
NEXT_PUBLIC_DEFAULT_CURRENCY=COP

# Payment margins (percentages)
NEXT_PUBLIC_FLIGHT_MARGIN=5
NEXT_PUBLIC_HOTEL_MARGIN=10

# Payment URLs (for checkout process)
NEXT_PUBLIC_PAYMENT_RETURN_URL=http://localhost:3000/payments/return
NEXT_PUBLIC_PAYMENT_CALLBACK_URL=http://localhost:3001/v1/payments/webhook

# ==============================================
# Feature Flags
# ==============================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_HOTEL_BOOKING=true
NEXT_PUBLIC_ENABLE_FLIGHT_BOOKING=true
NEXT_PUBLIC_ENABLE_PACKAGE_BOOKING=true
NEXT_PUBLIC_ENABLE_REPORTING=true

# ==============================================
# Debug Configuration
# ==============================================

# API debugging
NEXT_PUBLIC_DEBUG_API=false

# Enable request/response logging
NEXT_PUBLIC_LOG_API_REQUESTS=false

# ==============================================
# Security Configuration
# ==============================================

# JWT token storage key
NEXT_PUBLIC_AUTH_TOKEN_KEY=auth_token

# Session timeout (minutes)
NEXT_PUBLIC_SESSION_TIMEOUT=120

# ==============================================
# Service Timeouts (milliseconds)
# ==============================================

NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_AIRLINE_TIMEOUT=15000
NEXT_PUBLIC_HOTEL_TIMEOUT=20000
NEXT_PUBLIC_BANK_TIMEOUT=45000